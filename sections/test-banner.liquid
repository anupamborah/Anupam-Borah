<!-- sections/test-banner.liquid -->
<div id="TestBanner-{{ section.id }}" class="test-banner">
  <div class="test-banner__media">
    <!-- Desktop Image -->
    {% if section.settings.desktop_image != blank %}
      <img 
        src="{{ section.settings.desktop_image | image_url: width: 2000 }}" 
        alt="Banner Image" 
        class="test-banner__image test-banner__image--desktop" 
        width="2000"
        height="auto"
        loading="lazy"
      >
    {% endif %}

    <!-- Mobile Image -->
    {% if section.settings.mobile_image != blank %}
      <img 
        src="{{ section.settings.mobile_image | image_url: width: 900 }}" 
        alt="Banner Image Mobile" 
        class="test-banner__image test-banner__image--mobile" 
        width="900"
        height="auto"
        loading="lazy"
      >
    {% endif %}
  </div>

  <div class="test-banner__content">
    {% if section.settings.heading != blank %}
      <{{ section.settings.heading_tag }} 
        class="test-banner__heading"
      >
        {{ section.settings.heading }}
      </{{ section.settings.heading_tag }}>
    {% endif %}

    <!-- Desktop Subheading -->
    {% if section.settings.subheading_desktop != blank %}
      <p class="test-banner__subheading test-banner__subheading--desktop">
        {{ section.settings.subheading_desktop }}
      </p>
    {% endif %}

    <!-- Mobile Subheading -->
    {% if section.settings.subheading_mobile != blank %}
      <p class="test-banner__subheading test-banner__subheading--mobile">
        {{ section.settings.subheading_mobile }}
      </p>
    {% endif %}

    {% if section.settings.button_label != blank %}
      <div class="test-banner__button-wrapper">
        <a 
          href="{{ section.settings.button_link }}" 
          class="test-banner__button btn-size-{{ section.settings.button_size }}"
        >
          {{ section.settings.button_label }}
          <span class="arrow">â†’</span>
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.test-banner {
  position: relative;
  overflow: hidden;
}

.test-banner__media {
  position: relative;
  width: 100%;
}

.test-banner__image {
  width: 100%;
  height: auto;
  display: none;
}

.test-banner__image--desktop {
  display: block;
}

@media (max-width: 749px) {
  .test-banner__image--desktop { display: none; }
  .test-banner__image--mobile { display: block; }
}

.test-banner__content {
  position: absolute;
  top: 50%;
  left: 10%;
  transform: translateY(-50%);
  max-width: 600px;
  text-align: left;
}

@media (max-width: 749px) {
  .test-banner__content {
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    max-width: 90%;
  }
}

.test-banner__heading {
  font-size: 70px;
  font-weight: 500;
  margin-top: 300px;
  margin-bottom: 16px;
  margin-left: -80px;
}

.test-banner__subheading {
  font-size: 20px;
  margin-bottom: 24px;
  margin-left: -80px;
  margin-right: 200px;
  line-height: 1.4;
}

/* Desktop subheading */
.test-banner__subheading--desktop { display: block; }
.test-banner__subheading--mobile { display: none; }

@media (max-width: 749px) {
  .test-banner__subheading--desktop { display: none; }
  .test-banner__subheading--mobile { display: block; }
}

.test-banner__button-wrapper {
  display: flex;
  justify-content: flex-start;
  margin-left: -80px;
}

@media (max-width: 749px) {
  .test-banner__button-wrapper {
    justify-content: center;
  }
}

.test-banner__button {
  display: inline-flex;
  align-items: center;
  background: black;
  color: white;
  text-decoration: none;
  font-weight: 600;
  border-radius: 4px;
  transition: all 0.3s ease;
  overflow: hidden;
}

.btn-size-small  { padding: 8px 16px; font-size: 12px; }
.btn-size-medium { padding: 12px 20px; font-size: 14px; }
.btn-size-large  { padding: 16px 32px; font-size: 16px; }

.test-banner__button .arrow {
  margin-left: 8px;
  transition: transform 0.3s ease;
}

.test-banner__button:hover {
  background: #333;
}

.test-banner__button:hover .arrow {
  transform: translateX(6px);
}

/* Mobile font sizes */
@media (max-width: 749px) {
  .test-banner__heading { font-size: 30px; margin-bottom: 12px; margin-top: -50px; margin-left: -60px; margin-right: -60px }
  .test-banner__subheading { font-size: 16px; margin-bottom: 180px; margin-left: -60px; margin-right: -60px }
  .test-banner__button { margin-bottom: -50px; margin-left: 80px; font-size: 16px }
}
</style>

{% schema %}
{
  "name": "Test Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "image_picker", "id": "desktop_image", "label": "Desktop Image" },
    { "type": "image_picker", "id": "mobile_image", "label": "Mobile Image" },
    { "type": "select", "id": "heading_tag", "label": "Heading Tag", "default": "h2",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" }
      ]
    },
    { "type": "text", "id": "heading", "label": "Heading", "default": "The Gift Guide" },
    { "type": "text", "id": "subheading_desktop", "label": "Desktop Subheading", "default": "Discover Joy: Your Ultimate Holiday Gift Destination." },
    { "type": "text", "id": "subheading_mobile", "label": "Mobile Subheading", "default": "Your Holiday Gifts in One Place." },
    { "type": "text", "id": "button_label", "label": "Button Label", "default": "Shop Now" },
    { "type": "url", "id": "button_link", "label": "Button Link", "default": "/collections/all" },
    {
      "type": "select",
      "id": "button_size",
      "label": "Button Size",
      "default": "medium",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" }
      ]
    }
  ],
  "presets": [
    { "name": "Test Banner", "category": "Custom" }
  ]
}
{% endschema %}
