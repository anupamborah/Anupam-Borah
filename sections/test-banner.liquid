<!-- sections/test-banner.liquid -->
<div id="TestBanner-{{ section.id }}" class="test-banner">
  <div class="test-banner__media">
    <!-- Desktop Image -->
    {% if section.settings.desktop_image != blank %}
      <img 
        src="{{ section.settings.desktop_image | image_url: width: 2000 }}" 
        alt="Banner Image" 
        class="test-banner__image test-banner__image--desktop" 
        width="2000"
        height="auto"
        loading="lazy"
      >
    {% endif %}

    <!-- Mobile Image -->
    {% if section.settings.mobile_image != blank %}
      <img 
        src="{{ section.settings.mobile_image | image_url: width: 900 }}" 
        alt="Banner Image Mobile" 
        class="test-banner__image test-banner__image--mobile" 
        width="900"
        height="auto"
        loading="lazy"
      >
    {% endif %}
  </div>

  <div 
    class="
      test-banner__content page-width
      align-desktop-{{ section.settings.desktop_alignment }}
      align-mobile-{{ section.settings.mobile_alignment }}
      valign-desktop-{{ section.settings.desktop_valignment }}
      valign-mobile-{{ section.settings.mobile_valignment }}
    "
  >
    {% if section.settings.heading != blank %}
      <{{ section.settings.heading_tag }} 
        class="test-banner__heading"
        style="
          font-size: {{ section.settings.heading_size_desktop }}px;
          margin: {{ section.settings.heading_margin_top_desktop }}px {{ section.settings.heading_margin_right_desktop }}px {{ section.settings.heading_margin_bottom_desktop }}px {{ section.settings.heading_margin_left_desktop }}px;
        "
      >
        {{ section.settings.heading }}
      </{{ section.settings.heading_tag }}>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p 
        class="test-banner__subheading"
        style="
          font-size: {{ section.settings.subheading_size_desktop }}px;
          margin: {{ section.settings.subheading_margin_top_desktop }}px {{ section.settings.subheading_margin_right_desktop }}px {{ section.settings.subheading_margin_bottom_desktop }}px {{ section.settings.subheading_margin_left_desktop }}px;
        "
      >
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    {% if section.settings.button_label != blank %}
      <div 
        class="
          test-banner__button-wrapper
          btn-align-desktop-{{ section.settings.button_align_desktop }}
          btn-align-mobile-{{ section.settings.button_align_mobile }}
        "
        style="margin: {{ section.settings.button_margin_top_desktop }}px {{ section.settings.button_margin_right_desktop }}px {{ section.settings.button_margin_bottom_desktop }}px {{ section.settings.button_margin_left_desktop }}px;"
      >
        <a 
          href="{{ section.settings.button_link }}" 
          class="test-banner__button btn-size-{{ section.settings.button_size }}"
          style="font-size: {{ section.settings.button_text_size }}px"
        >
          {{ section.settings.button_label }}
          <span class="arrow">â†’</span>
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
.test-banner {
  position: relative;
  overflow: hidden;
}

.test-banner__media {
  position: relative;
  width: 100%;
}

.test-banner__image {
  width: 100%;
  height: auto;
  display: none;
}

.test-banner__image--desktop {
  display: block;
}

@media (max-width: 749px) {
  .test-banner__image--desktop { display: none; }
  .test-banner__image--mobile { display: block; }
}

.test-banner__content {
  position: absolute;
  transform: translate(-50%, -50%);
  max-width: 600px;
  top: 50%;
  left: 50%;
  text-align: center;
}

/* Horizontal Alignment */
.align-desktop-left   { left: 20%; text-align: left; transform: translate(-20%, -50%); }
.align-desktop-center { left: 50%; text-align: center; transform: translate(-50%, -50%); }
.align-desktop-right  { left: 80%; text-align: right; transform: translate(-80%, -50%); }

@media (max-width: 749px) {
  .align-mobile-left   { left: 20%; text-align: left; transform: translate(-20%, -50%); }
  .align-mobile-center { left: 50%; text-align: center; transform: translate(-50%, -50%); }
  .align-mobile-right  { left: 80%; text-align: right; transform: translate(-80%, -50%); }
}

/* Vertical Alignment */
.valign-desktop-top    { top: 20%; transform: translate(-50%, -20%); }
.valign-desktop-middle { top: 50%; transform: translate(-50%, -50%); }
.valign-desktop-bottom { top: 80%; transform: translate(-50%, -80%); }

@media (max-width: 749px) {
  .valign-mobile-top    { top: 20%; transform: translate(-50%, -20%); }
  .valign-mobile-middle { top: 50%; transform: translate(-50%, -50%); }
  .valign-mobile-bottom { top: 80%; transform: translate(-50%, -80%); }
}

/* Button wrapper alignments */
.test-banner__button-wrapper {
  display: flex;
}

.btn-align-desktop-left   { justify-content: flex-start; }
.btn-align-desktop-center { justify-content: center; }
.btn-align-desktop-right  { justify-content: flex-end; }

@media (max-width: 749px) {
  .btn-align-mobile-left   { justify-content: flex-start; }
  .btn-align-mobile-center { justify-content: center; }
  .btn-align-mobile-right  { justify-content: flex-end; }
}

/* Button sizes */
.btn-size-small  { padding: 8px 16px; }
.btn-size-medium { padding: 12px 24px; }
.btn-size-large  { padding: 16px 32px; }

/* Button styling */
.test-banner__button {
  display: inline-flex;
  align-items: center;
  background: black;
  color: white;
  text-decoration: none;
  font-weight: 600;
  border-radius: 4px;
  transition: all 0.3s ease;
  overflow: hidden;
}

.test-banner__button .arrow {
  margin-left: 8px;
  transition: transform 0.3s ease;
}

.test-banner__button:hover {
  background: #333;
}

.test-banner__button:hover .arrow {
  transform: translateX(6px);
}

/* Mobile overrides for margins & text size */
@media (max-width: 749px) {
  .test-banner__heading {
    font-size: {{ section.settings.heading_size_mobile }}px !important;
    margin: {{ section.settings.heading_margin_top_mobile }}px {{ section.settings.heading_margin_right_mobile }}px {{ section.settings.heading_margin_bottom_mobile }}px {{ section.settings.heading_margin_left_mobile }}px !important;
  }
  .test-banner__subheading {
    font-size: {{ section.settings.subheading_size_mobile }}px !important;
    margin: {{ section.settings.subheading_margin_top_mobile }}px {{ section.settings.subheading_margin_right_mobile }}px {{ section.settings.subheading_margin_bottom_mobile }}px {{ section.settings.subheading_margin_left_mobile }}px !important;
  }
  .test-banner__button-wrapper {
    margin: {{ section.settings.button_margin_top_mobile }}px {{ section.settings.button_margin_right_mobile }}px {{ section.settings.button_margin_bottom_mobile }}px {{ section.settings.button_margin_left_mobile }}px !important;
  }
}
</style>

